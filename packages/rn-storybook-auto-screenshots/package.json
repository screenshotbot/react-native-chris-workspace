    "testEnvironment": "node",
    "roots": ["<rootDir>/src"]
  },
  "devDependencies": {
    "@storybook/react-native": "*",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "react": "*",
    "react-native": "*",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
